<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/activity_theme_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/one_hundred_five_dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/thirty_five_dp"
                android:layout_marginTop="@dimen/thirty_dp"
                android:layout_marginEnd="@dimen/thirty_dp"
                android:layout_marginBottom="@dimen/thirty_dp"
                android:background="@drawable/curved_dashboard_bg">

                <include layout="@layout/view_custom_menu" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/fifty_dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/thirty_dp"
                        android:layout_marginBottom="@dimen/ten_dp"
                        android:gravity="center"
                        android:text="@string/label_my_profile"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/thirty_five_sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="@dimen/eight_hundred_dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardCornerRadius="@dimen/five_dp"
                        card_view:cardElevation="@dimen/eight_dp"
                        card_view:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/twenty_dp"
                            android:background="@color/colorWhite"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/label_customer_id"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fifteen_sp" />

                                <TextView
                                    android:id="@+id/customer_id_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/eight_dp"
                                    android:gravity="center"
                                    android:text="-"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/eighteen_sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/twenty_five_dp"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/thirty_dp"
                                    android:layout_weight="0.1" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/label_name"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/fourteen_sp" />

                                    <TextView
                                        android:id="@+id/name_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/eighteen_sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/label_phone"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/fourteen_sp" />

                                    <TextView
                                        android:id="@+id/phone_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/eighteen_sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/twenty_five_dp"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/thirty_dp"
                                    android:layout_weight="0.1" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/label_earned_credits"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/fourteen_sp" />

                                    <TextView
                                        android:id="@+id/emial_address_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/eighteen_sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/label_available_credits"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/fourteen_sp" />

                                    <TextView
                                        android:id="@+id/location_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/eighteen_sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/twenty_five_dp"
                                android:layout_marginBottom="@dimen/thirty_dp"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/thirty_dp"
                                    android:layout_weight="0.1" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/label_burned_credits"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/fourteen_sp" />

                                    <TextView
                                        android:id="@+id/address_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/eighteen_sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="780dp"
                        android:layout_height="@dimen/two_hundred_sixty_five_dp"
                        android:layout_gravity="center"
                        android:background="@color/offers_list_bg"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/two_hundred_fifty_dp"
                            android:layout_marginStart="@dimen/ten_dp"
                            android:layout_marginEnd="@dimen/ten_dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/eight_dp"
                                android:layout_marginBottom="@dimen/fifteen_dp"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:id="@+id/offers_header_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_centerVertical="true"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="@dimen/eight_dp"
                                        android:text="@string/label_your_offers"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="@dimen/thirty_sp"
                                        android:textStyle="bold" />
                                </RelativeLayout>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/promotionsRecyclerView"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_below="@+id/offers_header_layout"
                                    android:layout_marginStart="@dimen/five_dp"
                                    android:layout_marginEnd="@dimen/five_dp"
                                    android:layout_marginBottom="@dimen/fifteen_dp"
                                    android:visibility="gone" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/cross_cell_data_recycle"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_below="@+id/offers_header_layout"
                                    android:layout_marginStart="@dimen/five_dp"
                                    android:layout_marginEnd="@dimen/five_dp" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/promotion_viewAll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/view_all_btn_bg"
                                android:text="@string/label_view_all"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/fifteen_sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/nodata_found"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="No Data Found"
                                android:textColor="@color/RED"
                                android:textSize="@dimen/fifteen_sp"
                                android:textStyle="bold"
                                android:visibility="gone" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/thirty_dp">

                    <include layout="@layout/view_customer_support" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <include layout="@layout/view_faq_layout" />
    </RelativeLayout>

    <include
        android:id="@+id/networkErrorLayout"
        layout="@layout/layout_network_error" />
</androidx.constraintlayout.widget.ConstraintLayout>
