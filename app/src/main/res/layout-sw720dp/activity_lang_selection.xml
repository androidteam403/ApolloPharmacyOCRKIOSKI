<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/language_bg">

        <include
            layout="@layout/view_text_marqe_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/main_lang_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.75"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:weightSum="0.75">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.01" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.37"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/online_medicine_store_log"
                                android:layout_width="wrap_content"
                                android:layout_height="270dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/five_dp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/lang_page_text_logo" />

                            <ImageView
                                android:id="@+id/app_logo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/lang_page_apollo_logo"
                                android:visibility="visible" />
                        </LinearLayout>

                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.38"
                            android:scaleType="fitXY"
                            android:visibility="gone" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.02" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.1" />

                            <LinearLayout
                                android:id="@+id/lang_view_layout"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:orientation="vertical"
                                android:weightSum="1">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.04" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.28"
                                    android:orientation="horizontal"
                                    android:weightSum="1">

                                    <TextView
                                        android:id="@+id/english_lang_text"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.3"
                                        android:background="@drawable/lang_curved_selected_bg"
                                        android:gravity="center"
                                        android:text="@string/language_english"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/twenty_sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="@dimen/fifteen_dp"
                                        android:layout_weight="0.7"
                                        android:gravity="center_vertical"
                                        android:text="@string/label_select_your_language"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/twenty_five_sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.04" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.28"
                                    android:orientation="horizontal"
                                    android:weightSum="1">

                                    <TextView
                                        android:id="@+id/tamil_lang_text"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.3"
                                        android:background="@drawable/lang_curved_unselected_bg"
                                        android:gravity="center"
                                        android:text="@string/language_tamil"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/twenty_sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/fifteen_dp"
                                        android:layout_weight="0.7"
                                        android:gravity="center_vertical"
                                        android:text="@string/Choose_Your_Language_tamil"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/twenty_three_sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.04" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.28"
                                    android:orientation="horizontal"
                                    android:weightSum="1">

                                    <TextView
                                        android:id="@+id/telugu_lang_text"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.3"
                                        android:background="@drawable/lang_curved_unselected_bg"
                                        android:gravity="center"
                                        android:text="@string/language_telugu"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/twenty_sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="@dimen/fifteen_dp"
                                        android:layout_weight="0.7"
                                        android:gravity="center_vertical"
                                        android:text="@string/Choose_Your_Language_telugu"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/twenty_five_sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.04" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.44" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.56"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/more_language_img"
                            android:layout_width="@dimen/one_hundred_dp"
                            android:layout_height="@dimen/one_hundred_dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/lang_down_arrow" />

                        <LinearLayout
                            android:id="@+id/lang_continue_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="@dimen/thirty_dp"
                            android:background="@drawable/lang_selection_btn_bg"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/lets_begin_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Lets_Begin"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/twenty_sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/fifteen_dp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/black_right_arrow" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/more_lang_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/activity_theme_bg"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.75"
                    android:orientation="vertical"
                    android:weightSum="0.75">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.07" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.27"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/more_lang_apollo_circle_logo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"
                        android:orientation="vertical"
                        android:weightSum="0.45">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.05" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.1"
                            android:orientation="horizontal"
                            android:weightSum="6">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.85" />

                            <TextView
                                android:id="@+id/english_lang_btn"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/lang_curved_selected_bg"
                                android:gravity="center"
                                android:text="@string/language_english"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/twenty_sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1" />

                            <TextView
                                android:id="@+id/tamil_lang_btn"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/lang_curved_unselected_bg"
                                android:gravity="center"
                                android:text="@string/language_tamil"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/twenty_sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1" />

                            <TextView
                                android:id="@+id/telugu_lang_btn"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/lang_curved_unselected_bg"
                                android:gravity="center"
                                android:text="@string/language_telugu"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/twenty_sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1" />

                            <TextView
                                android:id="@+id/kannada_lang_btn"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/lang_curved_unselected_bg"
                                android:gravity="center"
                                android:text="@string/language_kannada"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/twenty_sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.85" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.04" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.1"
                            android:orientation="horizontal"
                            android:weightSum="6">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.85" />

                            <TextView
                                android:id="@+id/malayalam_lang_btn"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/lang_curved_unselected_bg"
                                android:gravity="center"
                                android:text="@string/language_malayalam"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/twenty_sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1" />

                            <TextView
                                android:id="@+id/marathi_lang_btn"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/lang_curved_unselected_bg"
                                android:gravity="center"
                                android:text="@string/language_bangali"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/twenty_sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1" />

                            <TextView
                                android:id="@+id/panjabi_lang_btn"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/lang_curved_unselected_bg"
                                android:gravity="center"
                                android:text="@string/language_panjabi"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/twenty_sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1" />

                            <TextView
                                android:id="@+id/hindi_lang_btn"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/lang_curved_unselected_bg"
                                android:gravity="center"
                                android:text="@string/language_hindi"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/twenty_sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.85" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.04" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.1"
                            android:orientation="horizontal"
                            android:weightSum="6">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.95" />

                            <TextView
                                android:id="@+id/gujarathi_lang_btn"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/lang_curved_unselected_bg"
                                android:gravity="center"
                                android:text="@string/language_gujarathi"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/twenty_sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1" />

                            <TextView
                                android:id="@+id/urdu_lang_btn"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/lang_curved_unselected_bg"
                                android:gravity="center"
                                android:text="@string/language_urdu"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/twenty_sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.95" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.42"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/back_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="@dimen/forty_dp"
                            android:layout_marginBottom="@dimen/forty_dp"
                            android:contentDescription="@string/app_name"
                            android:rotation="90"
                            android:src="@drawable/down_arrow" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.58"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/more_lang_continue_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="@dimen/thirty_dp"
                            android:background="@drawable/lang_selection_btn_bg"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Lets_Begin"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/twenty_sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/fifteen_dp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/black_right_arrow" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <include layout="@layout/view_faq_layout" />
        <ImageView
            android:id="@+id/settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/twenty_dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_setting" />
    </RelativeLayout>

    <include
        android:id="@+id/networkErrorLayout"
        layout="@layout/layout_network_error" />
</androidx.constraintlayout.widget.ConstraintLayout>