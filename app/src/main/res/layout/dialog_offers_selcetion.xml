<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transperent_black_color">

        <LinearLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twenty_five_dp"
            android:layout_marginEnd="@dimen/twenty_five_dp"
            android:layout_marginTop="@dimen/twenty_five_dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/offer_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Offer Tittle"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/selectionoffers_recycle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/twenty_five_dp"
                android:layout_marginBottom="@dimen/thirty_five_dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/dialogButtonOK"
            android:layout_width="match_parent"
            android:layout_height="@dimen/thirty_five_dp"
            android:layout_alignParentBottom="true"
            android:background="@color/selected_text_color"
            android:gravity="center"
            android:text="Buy Now"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/dialogButtonNO"
            android:layout_width="@dimen/twenty_five_dp"
            android:layout_height="@dimen/twenty_five_dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/margin_10dp"
            android:src="@drawable/delete_black_icon"
            android:tint="@color/white" />

    </RelativeLayout>
</layout>
