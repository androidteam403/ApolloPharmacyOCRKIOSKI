<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/six_hundred_dp"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/five_dp"
    android:padding="@dimen/ten_dp"
    android:background="@drawable/activity_theme_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingBottom="0dp"/>

            <TextView
                android:id="@+id/txt_navigate_bt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/abt_phone"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:text="@string/label_about_phone_click_here"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/twenty_sp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp" />
<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginBottom="15dp"/>-->
<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginBottom="15dp" />-->

            <EditText
                android:id="@+id/text_bt_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:text=""
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/phone_edittext_bg"
                android:visibility="visible"
                android:hint="Bluetooth Address"/>

<!--            <include layout="@layout/full_divider" />-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/skip"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:clickable="true"
                    android:gravity="center"
                    android:lines="2"
                     />
                <TextView
                    android:id="@+id/cancel_continue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Cancel"
                    android:background="@drawable/okay_btn_bg"
                    android:clickable="true"
                    android:gravity="center" />

                </TableRow>
        </LinearLayout>

    </ScrollView>


</LinearLayout>