<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CC000000">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CC000000">

            <RelativeLayout
                android:id="@+id/pharma_fmcg_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/thirty_dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/orderisin_progress_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_five_dp"
                    android:background="#99c2c8"
                    android:gravity="center"
                    android:text="Your order is in progress"
                    android:textColor="@color/white"
                    android:textSize="@dimen/eighteen_sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pleaseproceedto_billing_text"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_below="@+id/orderisin_progress_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:background="@color/nutrition_color"
                    android:paddingStart="@dimen/sixty_dp"
                    android:paddingEnd="@dimen/sixty_dp"
                    android:text="Please Proceed to Billing Counter and Collect"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/request_oredr_oredrtype_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pleaseproceedto_billing_text"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_10dp">

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="90dp"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:background="@drawable/plain_background_rectangle_border"
                            android:textSize="@dimen/fourteen_sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@color/white"
                            android:paddingLeft="@dimen/three_dp"
                            android:paddingRight="@dimen/three_dp"
                            android:text="Request ID"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/order_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sixteen_sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_10dp">

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="90dp"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:background="@drawable/plain_background_rectangle_border"
                            android:textSize="@dimen/fourteen_sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@color/white"
                            android:paddingLeft="@dimen/three_dp"
                            android:paddingRight="@dimen/three_dp"
                            android:text="Ordered by"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/user_name_phone_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_horizontal"
                            android:text="User Name\n+91 999999999"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sixteen_sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_10dp">

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="90dp"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:background="@drawable/plain_background_rectangle_border"
                            android:textSize="@dimen/fourteen_sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@color/white"
                            android:paddingLeft="@dimen/three_dp"
                            android:paddingRight="@dimen/three_dp"
                            android:text="Order Type"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="@dimen/sixty_dp"
                            android:layout_height="@dimen/forty_dp"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="@dimen/twenty_dp"
                            android:src="@drawable/free_home_delivery" />

                        <TextView
                            android:id="@+id/delivery_type_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/ten_dp"
                            android:text="Home Delivery"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </RelativeLayout>


                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/track_yourorder_laypout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/one_hundred_twenty_dp"
                    android:layout_below="@+id/request_oredr_oredrtype_layout"
                    android:layout_marginStart="@dimen/ten_dp"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:layout_marginEnd="@dimen/ten_dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/twelve_dp"
                        android:background="@drawable/track_ask_apollo_bg">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/label_scan_qr_code_for_app"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/ten_sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="@dimen/fifty_dp"
                                android:layout_height="@dimen/fifty_dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/two_dp"
                                android:contentDescription="@string/app_name"
                                android:gravity="center"
                                android:src="@drawable/ask_app_qr_code" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="1">

                            <View
                                android:layout_width="37dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.05" />

                            <ImageView
                                android:id="@+id/download_ask_apollo_image"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/one_hundred_dp"
                                android:layout_weight="0.25"
                                android:contentDescription="@string/app_name"
                                android:paddingTop="@dimen/twenty_five_dp"
                                android:paddingBottom="@dimen/three_dp"
                                android:src="@drawable/icon_download_ask_app" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:orientation="vertical"
                                android:weightSum="1">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.18" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.66"
                                    android:orientation="horizontal"
                                    android:weightSum="1">

                                    <LinearLayout
                                        android:id="@+id/download_ask_apollo_layout"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.4"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/label_get_link_download"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="@dimen/twelve_sp"
                                            android:textStyle="bold" />

                                        <ImageView
                                            android:layout_width="@dimen/fifty_dp"
                                            android:layout_height="@dimen/thirty_five_dp"
                                            android:layout_marginTop="@dimen/five_dp"
                                            android:contentDescription="@string/app_name"
                                            android:src="@drawable/ic_apollo_247_logo" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.2"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center">

                                            <View
                                                android:layout_width="@dimen/two_dp"
                                                android:layout_height="match_parent"
                                                android:layout_centerHorizontal="true"
                                                android:background="@color/ask_apollo_divider_color" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:background="@drawable/ask_apollo_download_bg"
                                                android:text="@string/label_ask_apollo_or"
                                                android:textColor="@color/colorBlack"
                                                android:textSize="@dimen/fifteen_sp"
                                                android:textStyle="bold" />
                                        </RelativeLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.3"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:text="@string/label_scan_qr_code_for_app"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="@dimen/ten_sp"
                                            android:textStyle="bold" />

                                        <ImageView
                                            android:layout_width="@dimen/fifty_dp"
                                            android:layout_height="@dimen/fifty_dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="@dimen/two_dp"
                                            android:contentDescription="@string/app_name"
                                            android:gravity="center"
                                            android:src="@drawable/ask_app_qr_code" />
                                    </LinearLayout>

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.1" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.16" />
                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="0dp"
                        android:background="@color/selected_menu_color"
                        android:paddingStart="@dimen/eight_dp"
                        android:paddingTop="@dimen/three_dp"
                        android:paddingEnd="@dimen/eight_dp"
                        android:paddingBottom="@dimen/three_dp"
                        android:text="Thank You For Placing Your Order"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/fourteen_sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <!--                <View-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="@dimen/fifty_dp"-->
                <!--                    android:layout_below="@+id/track_yourorder_laypout"-->
                <!--                    android:background="@color/white" />-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/one_hundred_dp"
                    android:layout_below="@+id/track_yourorder_laypout"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@color/white" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="#CC000000" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/blackstroke_yellowsolid_curves_bg"
                        android:onClick="@{()-> callback.onClickContinueShopping()}"
                        android:paddingStart="@dimen/fifteen_dp"
                        android:paddingTop="@dimen/ten_dp"
                        android:paddingEnd="@dimen/fifteen_dp"
                        android:paddingBottom="@dimen/ten_dp"
                        android:text="Continue Shopping"
                        android:textColor="@color/BLACK"
                        android:textSize="@dimen/eighteen_sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <data>

        <variable
            name="callback"
            type="com.apollo.pharmacy.ocr.activities.yourorderstatus.YourOrderStatusActivityListener" />
    </data>
</layout>
