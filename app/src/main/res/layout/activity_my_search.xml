<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <RelativeLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/activity_theme_bg">
        <EditText
            android:id="@+id/usb_scan"
            android:layout_width="0.1dp"
            android:layout_height="0.1dp"
            android:background="@color/white"
            android:inputType="text"
            android:importantForAutofill="no" />


        <!--        <HorizontalScrollView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content">-->

        <LinearLayout
            android:id="@+id/sub_parent_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/one_hundred_five_dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/thirty_five_dp"
                android:layout_marginTop="@dimen/thirty_dp"
                android:layout_marginEnd="@dimen/thirty_dp"
                android:layout_marginBottom="@dimen/thirty_dp"
                android:background="@drawable/curved_dashboard_bg">

                <include layout="@layout/view_custom_menu" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/sub_sub_parent_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/forty_dp"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="@string/label_search_your_products"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/fourteen_sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/check_out_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/forty_dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/checkout_cart" />
                    <!--                    <LinearLayout-->
                    <!--                        android:layout_toRightOf="@id/search"-->
                    <!--                        android:id="@+id/check_out_btn"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:background="@color/nutrition_color"-->
                    <!--                        android:gravity="center"-->
                    <!--                        android:layout_marginLeft="@dimen/twenty_dp"-->
                    <!--                        android:orientation="horizontal">-->

                    <!--                        <TextView-->
                    <!--                            android:layout_width="wrap_content"-->
                    <!--                            android:layout_height="wrap_content"-->
                    <!--                            android:layout_gravity="center"-->
                    <!--                            android:gravity="center"-->
                    <!--                            android:padding="@dimen/five_dp"-->
                    <!--                            android:text="@string/label_check_out"-->
                    <!--                            android:textAllCaps="true"-->
                    <!--                            android:textColor="@color/colorWhite"-->
                    <!--                            android:textStyle="bold" />-->
                    <!--                    </LinearLayout>-->

                    <RelativeLayout
                        android:id="@+id/scan_products"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/three_dp"
                            android:background="@drawable/okay_btn_bg"
                            android:backgroundTint="@color/near_apollo_store_color"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/twelve_dp"
                                android:text="Scan your product bar code"
                                android:textColor="@color/white"
                                android:textSize="@dimen/twelve_sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/forty_dp"
                            android:layout_height="@dimen/forty_dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/round_untick_bg"
                            android:backgroundTint="@color/white"
                            android:contentDescription="@string/app_name"
                            android:padding="@dimen/ten_dp"
                            android:src="@drawable/scan_products_icon" />


                    </RelativeLayout>
                </RelativeLayout>


                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/five_dp"
                    card_view:cardCornerRadius="@dimen/five_dp"
                    card_view:cardElevation="@dimen/eight_dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/forty_dp"
                                android:background="@color/text_dark_blue_color"
                                android:orientation="horizontal"
                                android:padding="@dimen/five_dp">

                                <EditText
                                    android:id="@+id/search_product_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/white"
                                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ 0123456789"
                                    android:hint="Search your product here like : crocin"
                                    android:padding="@dimen/two_dp"
                                    android:textSize="@dimen/twelve_sp" />

                                <ImageView
                                    android:id="@+id/clear_search_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:contentDescription="@string/app_name"
                                    android:padding="@dimen/five_dp"
                                    android:src="@drawable/close_icon"
                                    android:visibility="gone" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:visibility="gone"
                                    android:weightSum="1">

                                    <LinearLayout
                                        android:id="@+id/fc_phar_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:visibility="visible">

                                        <LinearLayout
                                            android:id="@+id/fmcg_layout"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.45"
                                            android:gravity="center"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/FMCG_txt"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:text="@string/label_FMCG"
                                                android:textColor="@color/colorWhite"
                                                android:textSize="@dimen/twelve_sp"
                                                android:textStyle="bold" />

                                            <LinearLayout
                                                android:id="@+id/fc_item_count_layout"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:orientation="horizontal"
                                                android:visibility="gone">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="match_parent"
                                                    android:layout_gravity="center"
                                                    android:gravity="center"
                                                    android:paddingLeft="@dimen/ten_dp"
                                                    android:text="("
                                                    android:textColor="@color/text_dark_blue_color"
                                                    android:textSize="@dimen/twelve_sp"
                                                    android:textStyle="bold" />

                                                <TextView
                                                    android:id="@+id/fc_item_count_txt"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="match_parent"
                                                    android:layout_gravity="center"
                                                    android:gravity="center"
                                                    android:textColor="@color/color_yellow_button"
                                                    android:textSize="@dimen/twelve_sp"
                                                    android:textStyle="bold" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="match_parent"
                                                    android:layout_gravity="center"
                                                    android:gravity="center"
                                                    android:text=")"
                                                    android:textColor="@color/text_dark_blue_color"
                                                    android:textSize="@dimen/twelve_sp"
                                                    android:textStyle="bold" />
                                            </LinearLayout>

                                        </LinearLayout>

                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/color_yellow_button"
                                            android:visibility="gone" />

                                        <LinearLayout
                                            android:id="@+id/pharma_layout"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.45"
                                            android:gravity="center"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/pharma_txt"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:gravity="center"
                                                android:text="@string/label_pharma"
                                                android:textColor="@color/colorWhite"
                                                android:textSize="@dimen/twelve_sp"
                                                android:textStyle="bold" />

                                            <LinearLayout
                                                android:id="@+id/pharma_item_count_layout"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:orientation="horizontal"
                                                android:visibility="gone">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="match_parent"
                                                    android:layout_gravity="center"
                                                    android:gravity="center"
                                                    android:paddingLeft="@dimen/ten_dp"
                                                    android:text="("
                                                    android:textColor="@color/text_dark_blue_color"
                                                    android:textSize="@dimen/twelve_sp"
                                                    android:textStyle="bold" />

                                                <TextView
                                                    android:id="@+id/pharma_item_count_txt"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="match_parent"
                                                    android:layout_gravity="center"
                                                    android:gravity="center"
                                                    android:textColor="@color/color_yellow_button"
                                                    android:textSize="@dimen/twelve_sp"
                                                    android:textStyle="bold" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="match_parent"
                                                    android:layout_gravity="center"
                                                    android:gravity="center"
                                                    android:text=")"
                                                    android:textColor="@color/text_dark_blue_color"
                                                    android:textSize="@dimen/twelve_sp"
                                                    android:textStyle="bold" />
                                            </LinearLayout>

                                        </LinearLayout>

                                        <View
                                            android:layout_width="2dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/color_yellow_button" />

                                        <LinearLayout
                                            android:id="@+id/image_layout"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="@dimen/two_dp"
                                            android:layout_marginEnd="@dimen/two_dp"
                                            android:layout_marginBottom="@dimen/two_dp"
                                            android:layout_weight="0.1"
                                            android:background="@color/text_dark_blue_color"
                                            android:gravity="center"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:id="@+id/search_icon"
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:contentDescription="@string/app_name"
                                                android:scaleType="fitCenter"
                                                android:src="@drawable/search_icon2" />
                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/search_view_layout"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.9"
                                        android:orientation="horizontal"
                                        android:visibility="gone"
                                        android:weightSum="1">

                                        <RelativeLayout
                                            android:layout_width="0dp"
                                            android:layout_height="@dimen/forty_dp"
                                            android:layout_gravity="center"
                                            android:layout_weight="0.23"
                                            android:background="@drawable/spinner_border"
                                            android:orientation="horizontal">

                                            <Spinner
                                                android:id="@+id/category_spinner"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:background="@android:color/transparent"
                                                android:drawSelectorOnTop="true"
                                                android:spinnerMode="dropdown" />

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentEnd="true"
                                                android:layout_centerVertical="true"
                                                android:layout_gravity="center"
                                                android:layout_marginEnd="@dimen/ten_dp"
                                                android:contentDescription="@string/app_name"
                                                android:src="@drawable/spinner_down_arrow" />
                                        </RelativeLayout>

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.02" />

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="@dimen/forty_dp"
                                            android:layout_gravity="center"
                                            android:layout_weight="0.55"
                                            android:background="@drawable/search_layout_bg"
                                            android:orientation="horizontal"
                                            android:weightSum="1">

                                            <View
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="0.7" />

                                            <View
                                                android:layout_width="@dimen/two_dp"
                                                android:layout_height="match_parent"
                                                android:background="@color/colorBlack" />

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_marginTop="@dimen/two_dp"
                                                android:layout_marginEnd="@dimen/two_dp"
                                                android:layout_marginBottom="@dimen/two_dp"
                                                android:layout_weight="0.3"
                                                android:background="@color/search_layout_bg"
                                                android:gravity="center"
                                                android:orientation="horizontal">

                                                <ImageView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:contentDescription="@string/app_name"
                                                    android:src="@drawable/whitesearch"
                                                    android:tint="@color/colorBlack" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="@dimen/ten_dp"
                                                    android:text="@string/label_search"
                                                    android:textAllCaps="true"
                                                    android:textColor="@color/colorBlack"
                                                    android:textSize="@dimen/eighteen_sp"
                                                    android:textStyle="bold" />
                                            </LinearLayout>
                                        </LinearLayout>

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.02" />

                                        <LinearLayout
                                            android:id="@+id/done_btn_layout"
                                            android:layout_width="0dp"
                                            android:layout_height="@dimen/forty_dp"
                                            android:layout_weight="0.18"
                                            android:background="@color/nutrition_color"
                                            android:gravity="center"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:text="@string/label_check_out"
                                                android:textAllCaps="true"
                                                android:textColor="@color/colorWhite"
                                                android:textSize="@dimen/eighteen_sp"
                                                android:textStyle="bold" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/search_products_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:orientation="horizontal"
                                        android:visibility="gone"
                                        android:weightSum="1.25">

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.05" />

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="@dimen/forty_dp"
                                            android:layout_gravity="center"
                                            android:layout_weight="0.6"
                                            android:background="@drawable/search_layout_bg"
                                            android:orientation="horizontal"
                                            android:visibility="visible"
                                            android:weightSum="1">

                                            <RelativeLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1">

                                                <EditText
                                                    android:id="@+id/search_autocomplete"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:layout_gravity="top"
                                                    android:layout_marginStart="@dimen/five_dp"
                                                    android:layout_marginEnd="@dimen/ten_dp"
                                                    android:background="@null"
                                                    android:gravity="center_vertical"
                                                    android:textColor="@color/colorPrimary"
                                                    android:textColorHint="@color/colorPrimary"
                                                    android:textSize="@dimen/eighteen_sp" />

                                                <ImageView
                                                    android:id="@+id/search_image"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentEnd="true"
                                                    android:contentDescription="@string/app_name"
                                                    android:padding="@dimen/ten_dp"
                                                    android:src="@drawable/ic_search"
                                                    android:visibility="visible" />

                                                <ImageView
                                                    android:id="@+id/cancel_image"
                                                    android:layout_width="18dp"
                                                    android:layout_height="18dp"
                                                    android:layout_alignParentEnd="true"
                                                    android:layout_centerInParent="true"
                                                    android:layout_marginEnd="@dimen/ten_dp"
                                                    android:background="@drawable/close_icon"
                                                    android:tint="@color/black"
                                                    android:visibility="gone" />
                                            </RelativeLayout>
                                        </LinearLayout>

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.05" />

                                        <LinearLayout
                                            android:id="@+id/search_product_layout"
                                            android:layout_width="0dp"
                                            android:layout_height="@dimen/forty_dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="@dimen/two_dp"
                                            android:layout_marginEnd="@dimen/two_dp"
                                            android:layout_marginBottom="@dimen/two_dp"
                                            android:layout_weight="0.2"
                                            android:background="@color/search_layout_bg"
                                            android:gravity="center"
                                            android:orientation="horizontal"
                                            android:visibility="gone">

                                            <ImageView
                                                android:layout_width="@dimen/twenty_five_dp"
                                                android:layout_height="@dimen/twenty_five_dp"
                                                android:contentDescription="@string/app_name"
                                                android:src="@drawable/circle_close"
                                                android:tint="@color/colorBlack" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/ten_dp"
                                                android:text="@string/Search"
                                                android:textAllCaps="true"
                                                android:textColor="@color/colorBlack"
                                                android:textSize="@dimen/eighteen_sp"
                                                android:textStyle="bold" />
                                        </LinearLayout>

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.05" />

                                        <LinearLayout
                                            android:id="@+id/search_cancel_layout"
                                            android:layout_width="0dp"
                                            android:layout_height="@dimen/forty_dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="@dimen/two_dp"
                                            android:layout_marginEnd="@dimen/two_dp"
                                            android:layout_marginBottom="@dimen/two_dp"
                                            android:layout_weight="0.2"
                                            android:background="@color/search_layout_bg"
                                            android:gravity="center"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:layout_width="@dimen/twenty_five_dp"
                                                android:layout_height="@dimen/twenty_five_dp"
                                                android:contentDescription="@string/app_name"
                                                android:src="@drawable/circle_close"
                                                card_view:tint="@color/colorBlack" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/ten_dp"
                                                android:text="@string/cancel"
                                                android:textAllCaps="true"
                                                android:textColor="@color/colorBlack"
                                                android:textSize="@dimen/twelve_sp"
                                                android:textStyle="bold" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/item_count_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|top"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/curved_items_count_bg"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/subcategory_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/five_dp"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/thirteen_sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_products_in_the_list"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/thirteen_sp" />
                            </LinearLayout>
                        </FrameLayout>

                        <ProgressBar
                            android:id="@+id/pdialog"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:indeterminate="true"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/advertise_banner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/app_name"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/no_item_found"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:contentDescription="@string/app_name"
                                android:gravity="center"
                                android:text="No item found"
                                android:textColor="@color/RED"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/categories_recycler_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/orders_search_layout_blue_bg"
                                android:visibility="gone" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/cross_selling_recycle_new"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/text_dark_blue_color"
                                android:visibility="gone" />

                            <ListView
                                android:id="@+id/search_suggestion_listview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/twenty_five_dp"
                                android:background="@color/orders_search_layout_bg"
                                android:visibility="gone" />

                            <ListView
                                android:id="@+id/search_listview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/orders_search_layout_bg"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/more_count_image"
                                android:layout_width="@dimen/forty_dp"
                                android:layout_height="@dimen/forty_dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/down_arrow"
                                android:visibility="gone" />
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/twenty_dp"
                android:layout_marginEnd="@dimen/ten_dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/one_hundred_seven_dp"
                    android:background="@null"
                    android:gravity="center"
                    android:text="@string/label_categories"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/fourteen_sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/sub_categories_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:layout_marginBottom="@dimen/twenty_dp"
                    android:scrollbars="vertical" />
            </LinearLayout>
        </LinearLayout>
        <!--        </HorizontalScrollView>-->

        <FrameLayout
            android:id="@+id/medic_keyboard"
            android:layout_width="@dimen/nine_hundred_dp"
            android:layout_height="@dimen/four_hundred_fifty_dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/two_hundred_fifty_dp"
            android:layout_marginEnd="@dimen/minus_two_dp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/one_hundred_twenty_dp"
            android:layout_marginBottom="@dimen/twenty_dp">

            <TextView
                android:id="@+id/plus_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toStartOf="@+id/items_count"
                android:text="+"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/twenty_sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/items_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toStartOf="@+id/checkout_image"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/twenty_five_sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/checkout_image"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/forty_dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/checkout_cart_unselect"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/fifty_dp">

                <include layout="@layout/view_customer_support" />
            </RelativeLayout>
        </RelativeLayout>

        <include layout="@layout/view_faq_layout" />

        <include
            android:id="@+id/networkErrorLayout"
            layout="@layout/layout_network_error" />

        <TextView
            android:id="@+id/trans_color_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent_color"
            android:visibility="gone" />
    </RelativeLayout>

    <include
        android:id="@+id/networkErrorLayout"
        layout="@layout/layout_network_error" />
</androidx.constraintlayout.widget.ConstraintLayout>
