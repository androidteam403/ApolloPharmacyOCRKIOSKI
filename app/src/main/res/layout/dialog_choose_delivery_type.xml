<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_color"
        android:stateListAnimator="@null">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/dialog_background">

            <LinearLayout
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/exclamatory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="12dp"
                            android:src="@drawable/exclamatory_mark" />


                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:paddingLeft="8dp"
                            android:paddingTop="16dp"
                            android:paddingRight="12dp"
                            android:text="Choose your delivery type"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sixteen_sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/dialogButtonNO"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="@dimen/margin_10dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/delete_black_icon" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/home_delivery_lay"
                        android:layout_width="@dimen/one_hundred_eighty_dp"
                        android:layout_height="@dimen/one_hundred_eighty_dp"
                        android:background="@drawable/choose_deliverytype_unselectedbg">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="@dimen/one_hundred_forty_dp"
                            android:layout_height="@dimen/one_hundred_dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/twenty_dp"
                            android:src="@drawable/free_home_delivery" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image"
                            android:layout_centerHorizontal="true"
                            android:text="Home Delivery"
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pay_pick_lay"
                        android:layout_width="@dimen/one_hundred_eighty_dp"
                        android:layout_height="@dimen/one_hundred_eighty_dp"
                        android:layout_marginStart="@dimen/fifteen_dp"
                        android:background="@drawable/choose_deliverytype_unselectedbg">

                        <ImageView
                            android:id="@+id/image1"
                            android:layout_width="@dimen/one_hundred_forty_dp"
                            android:layout_height="@dimen/one_hundred_dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/twenty_dp"
                            android:src="@drawable/pay_pick" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image1"
                            android:layout_centerHorizontal="true"
                            android:text="Pay and Pick up\n     at counter"
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                    </RelativeLayout>

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/continue_buton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:layout_marginBottom="@dimen/twenty_dp"
                    android:alpha="0.3"
                    android:background="@drawable/okay_btn_bg">

                    <TextView
                        android:id="@+id/dialogButtonOK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Continue"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/fourteen_sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</layout>